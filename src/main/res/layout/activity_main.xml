<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:entries="@array/genre_array"
        />
    <TextView
        android:id="@+id/recommendationsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:textSize="18sp"
        android:layout_below="@id/recommendButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/recommendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Recommendations"
        android:textColor="@color/white"
        android:backgroundTint="#61054A"
        android:layout_below="@id/genreSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



    <TableLayout
        android:id="@+id/recommendationsTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendationsHeading"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:stretchColumns="1">
    </TableLayout>
</RelativeLayout>
